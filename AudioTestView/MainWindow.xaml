<Window x:Class="AudioTestView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioTestView"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="MainWindow_OnClosed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Name="Indicator"></TextBlock>
            <Rectangle Width="30" Height="30" Fill="Black" Name="SLInd"></Rectangle>
        </StackPanel>
        <Grid x:Name="TestGrid" Grid.Row="1">
        </Grid>
    </Grid>

</Window>
