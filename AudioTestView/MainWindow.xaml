<Window x:Class="AudioTestView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioTestView"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="MainWindow_OnClosed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Name="Indicator" Margin="10"></TextBlock>
            <TextBlock Margin="5">In threw network</TextBlock>
            <ProgressBar Height="15" Name="MaxInd" Minimum="0" Maximum="3000" Margin="10"></ProgressBar>
            <TextBlock Name="MaxIndText"></TextBlock>
            <CheckBox Name="NoizeEnable">Test noize</CheckBox>
        </StackPanel>
        <Grid x:Name="TestGrid" Grid.Row="1" Background="Blue">
        </Grid>
    </Grid>

</Window>
